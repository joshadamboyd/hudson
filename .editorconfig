# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Tabs
[*.{php,css,js}]
indent_style = tab
indent_size = 4

# Remove newline
[*.md]
insert_final_newline = false
